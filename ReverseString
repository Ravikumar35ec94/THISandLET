//This reverses the string by reversiong the entire array
public void reverseString(string str)
        {
            char[] chars = str.ToCharArray();  
            Array.Reverse(chars);
            Console.WriteLine(chars); 
            Console.ReadLine();
        }
        

//This reverses the string by going through each character
public void reverseString(string str)
        {
            char[] chars = str.ToCharArray();  
            for (int i = 0, j = str.Length - 1; i < j; i++, j--) {  
            char c = chars[i];  
            chars[i] = chars[j];  
            chars[j] = c;  
            }  
            Console.WriteLine(chars); 
            Console.ReadLine();
        }
